<div class="container">
  <h1><%= post.title %></h1>
  <div>
    <p><%= post.content %></p>
    <img src="<%= post.image %>" alt="<%= post.title %>" class="img-fluid">
  </div>  
  <a href="/edit/<%= post._id %>" class="btn btn-warning mt-3">Editar</a>
  <a href="/delete/<%= post._id %>" class="btn btn-danger mt-3">Eliminar</a>
</div>