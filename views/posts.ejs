<div class="container">
  <h1>Todas las entradas del blog</h1>  
  <div class="row mt-5">
    <% posts.forEach(post => { %>
      <div class="col-4 mt-4">
        <div class="card">
          <div class="card-header">
            <h2><%= post.title %></h2>
          </div>
          <div class="card-body">
            <p><%= post.content %></p>
            <img src="<%= post.image %>" alt="<%= post.title %>">
          </div>
          <div class="text-center">
            <a href="/posts/<%= post.id %>" class="btn btn-primary mb-3">Ver m√°s</a>
          </div>
        </div>      
      </div> 
    <% }) %>
  </div>
</div>